{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/lib",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "strict": true,
    "removeComments": true,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
